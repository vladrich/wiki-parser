<?xml version="1.0" encoding="UTF-8"?>

<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
  <ant:property name="build.dir" value="build"/>
  <ant:property name="classes.dir" value="${build.dir}/classes"/>
  <ant:property name="lib.dir" value="${build.dir}/lib"/>
  <ant:property name="maven.repo.local" value="${user.home}/.maven/repository"/>
  <!-- Does not work with Windows at this moment, see TODO below 
  <property name="classpath.jar" value="${maven.repo.local}/log4j/jars/log4j-1.2.9.jar"/>
  -->      
  <goal name="wikiparser:compile">
  
    <ant:property name="oldclasspath" refid="maven.dependency.classpath" />
    <ant:path id="maven.dependency.classpath">
      <ant:pathelement path="${lenya.classes.dir}" />
      <ant:fileset dir="${lenya.lib.dir}">
            <ant:include name="*.jar" />
      </ant:fileset>
      <ant:pathelement path="${oldclasspath}" />
    </ant:path>
    
    <attainGoal name="wikiparser:generate"/>        
    <echo>Compiling the WikiParser</echo>
    <mkdir dir="${classes.dir}"/>
    <echo>Compiling Generated Java Classes</echo>
    <ant:javac srcDir="target/generated-src/main/java" destDir="${classes.dir}" 
      classpathref="maven.dependency.classpath" />
    <echo>Compiling Java Classes</echo>
    <ant:javac srcDir="${wikiparser.src.dir}" destDir="${classes.dir}" 
      classpathref="maven.dependency.classpath"/>
      
    <echo>{$lenya.classes.dir}</echo>
  </goal>      

  <goal name="wikiparser:generate">
    <echo>Generating the WikiParser</echo>
    <ant:copy file="${wikiparser.src.dir}/java/org/wyona/wiki/SimpleNode.java"
      toDir="target/generated-src/main/java/" overwrite="yes"/>
    <attainGoal name="javacc:jjtree-generate"/>    
    <attainGoal name="javacc:javacc-generate"/>
  </goal>

  <goal name="wikiparser:jar">
    <attainGoal name="wikiparser:compile"/>
    <mkdir dir="${lib.dir}"/>
    <jar destfile="${lib.dir}/WikiParser.jar" basedir="${classes.dir}" update="false">
      <manifest>
        <!-- TODO: Windows seems to have a problem with the class-path within the MANIFEST! -->
        <attribute name="class-path" value="${classpath.jar}"/>
        <attribute name="main-class" value="org.wyona.wiki.Wiki2XML"/>
      </manifest>
    </jar>
    <ant:copy file="${lib.dir}/WikiParser.jar" toDir="${lenya.lib.dir}" />
  </goal>

  <goal name="wikiparser:clean">
    <ant:delete dir="target"/>
    <ant:delete dir="build"/>
    <ant:delete dir="bin"/> 
  </goal> 

  <goal name="wikiparser:test">
    <ant:exec executable="test/run-tests.sh"/>
  </goal>
  
  <goal name="wikiparser:generate-tests">
    <ant:exec executable="text/generate-tests.sh"/>
  </goal>
</project>
